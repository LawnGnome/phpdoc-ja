 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>http_negotiate_language</function> の使用法</title>
    <programlisting role="php">
<![CDATA[
<?php
$langs = array(
		'en-US',// デフォルト
		'fr',
		'fr-FR',
		'de',
		'de-DE',
		'de-AT',
		'de-CH',
);

include './langs/'. http_negotiate_language($langs, $result) .'.php';

print_r($result);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>


