 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>http_persistent_handles_ident</function> の例</title>
    <programlisting role="php">
<![CDATA[
<?php
echo http_persistent_handles_ident("CUSTOM"), "\n";
echo http_persistent_handles_ident("MyApp1"), "\n";
http_get("http://www.example.com/");
print_r(http_persistent_handles_count());
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
GLOBAL
CUSTOM
stdClass Object
(
    [http_request] => Array
        (
            [MyApp1] => Array
                (
                    [used] => 0
                    [free] => 1
                )

        )

    [http_request_datashare] => Array
        (
            [GLOBAL] => Array
                (
                    [used] => 1
                    [free] => 0
                )

        )

    [http_request_pool] => Array
        (
        )

)
    </screen>
   </example>
  </para>
 </refsect1>

