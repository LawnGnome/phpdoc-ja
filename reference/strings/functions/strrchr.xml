 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>strrchr</function> の例</title>
    <programlisting role="php">
<![CDATA[
<?php
// $PATH 中の最後のディレクトリを取得
$dir = substr(strrchr($PATH, ":"), 1);

// 最後の改行文字以降をすべて取得
$text = "Line 1\nLine 2\nLine 3";
$last = substr(strrchr($text, 10), 1 );
?>
]]>
    </programlisting>
   </example>   
  </para>
 </refsect1>

