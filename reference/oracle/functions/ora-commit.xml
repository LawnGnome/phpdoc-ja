       <entry>
        &oracle.deprecated;
       </entry>
      </row>
     </tbody>
    </tgroup>
   </informaltable>
  </para>
 </refsect1>

 <refsect1 role="notes">
  &reftitle.notes;
   <para>
    &oracle.replacement.desc;
    <simplelist>
     <member><function>oci_commit</function></member>
    </simplelist>
   </para>
 </refsect1>

