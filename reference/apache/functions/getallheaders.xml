   </informaltable>
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>getallheadres</function> の例</title>
    <programlisting role="php">
<![CDATA[
<?php

foreach (getallheaders() as $name => $value) {
    echo "$name: $value\n";
}

?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

