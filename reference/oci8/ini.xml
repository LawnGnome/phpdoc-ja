       <thead>
        <row>
         <entry>名称</entry>
         <entry>デフォルト</entry>
         <entry>変更可否</entry>
         <entry>更新ログ</entry>
        </row>
       </thead>
       <tbody>
        <row>
         <entry>oci8.privileged_connect</entry>
         <entry>"0"</entry>
         <entry>PHP_INI_SYSTEM</entry>
