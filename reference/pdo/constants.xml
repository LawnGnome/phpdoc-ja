<section id="pdo.constants">
 &reftitle.constants;
 &extension.constants;
 <variablelist>
  <varlistentry>
   <term>
    <constant>PDO_PARAM_NULL</constant>
     (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     SQL NULLデータ型を表す。
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>PDO_PARAM_INT</constant>
     (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     SQL INTEGERデータ型を表す。
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>PDO_PARAM_STR</constant>
     (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     SQL CHAR, VARCHAR, または他の文字列データ型を表す。
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
   <term>
    <constant>PDO_PARAM_LOB</constant>
     (<type>integer</type>)
   </term>
   <listitem>
    <simpara>
     SQLラージオブジェクト型を表す。
    </simpara>
   </listitem>
  </varlistentry>
  <varlistentry>
