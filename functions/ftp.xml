    <title>説明</title>
    <funcsynopsis>
     <funcprototype>
      <funcdef>bool <function>ftp_site</function></funcdef>
      <paramdef>resource <parameter>ftp_stream</parameter></paramdef>
      <paramdef>string <parameter>cmd</parameter></paramdef>
     </funcprototype>
    </funcsynopsis>
